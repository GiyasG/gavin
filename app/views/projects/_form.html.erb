<%= form_for ([@authority, @project]), :html => { :multipart => true } do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>
      <ul>
      <% @project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :about %><br>
    <%= f.text_area :about %>
  </div>
  <div class="field">
    <%= f.label :started %><br>
    <%= f.date_select :started, :order => [:day, :month, :year], :start_year => Date.today.year - 10, :end_year => Date.today.year %>
  </div>
  <div class="field">
    <%= f.label :finished %><br>
    <%= f.date_select :finished, :order => [:day, :month, :year], :start_year => Date.today.year + 1, :end_year => Date.today.year+10 %>
  </div>
  <%= f.fields_for :photos, @photo do |ff| %>
    <% if (ff.object.authority_id).present? %>
    <h2>Edit photo</h2>
      <%= image_tag url_for(:controller => "photos", :action => "show",
                            :authority_id=>ff.object.authority_id, :id=>ff.object.id),
                            class: "col-md-3 img-thumbnail"%>
      <div class="field">
        <p><%= ff.object.filename %></p>
        <%= ff.file_field :file %><br>
      </div>
      <div class="field">
          <%= ff.label :description %>
          <%= ff.text_field :description, :value => ff.object.description %>
      </div>

    <% else %>
    <h2>Add photo</h2>
        <div class="field">
          <%= ff.file_field :file %><br>
        </div>
        <div class="field">
          <%= ff.label :description %>
          <%= ff.text_field :description %>
        </div>

    <% end %>
  <% end %>

    <hr>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
