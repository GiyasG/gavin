<p id="notice"><%= notice %></p>

    <div class='row animated bounceInDown'>
      <%= image_tag url_for(:controller => "photos", :action => "show_authority", :authority_id=>@authority.id, :id=>@authority.photos[0][:id]), class: "col-md-3 img-thumbnail"%>
      <%= simple_format(content_tag :h5, "#{@authority.about}", class:"col-md-9 text-justify")%>
      <%= content_tag :h2, "#{@authority.title} #{@authority.name} #{@authority.surname}", class: "col-md-12 shadow"%>
      <%= content_tag :h5, "#{@authority.position}", class:"col-md-12"%>
    </div>

    <hr id="prj">
    <div class='indexpage row'>
    <h2 class="shadow text-center animated fadeInUp h2">Projects</h1>
    <%= render @projects %>
    </div>

    <hr id="ppr">
    <div class='indexpage row'>
    <h2 class="shadow text-center animated fadeInUp">Papers</h1>
    <%= render @papers %>
    </div>

    <hr id="phts">
    <div class="carousel_wrap">
    <h2 class="shadow text-center animated fadeInUp">Photos</h1>
    <%= render 'layouts/carousel_photos' %>
    </div>

    <hr id="cnts">
    <div class='contact text-center'>
    <h2 class="shadow animated fadeInUp">Contact</h1>
    <%= render @contacts %>
    </div>
