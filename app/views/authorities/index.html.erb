<p id="notice"><%= notice %></p>

    <section>
    <div class='row animated bounceInDown'>
      <%= image_tag url_for(:controller => "photos", :action => "show_authority", :authority_id=>@authority.id, :id=>@authority.photos[0][:id]), class: "col-md-2"%>
      <div class="col-md-10">
      <%= content_tag :h3, "#{@authority.title} #{@authority.name} #{@authority.surname}", class: "col-md-12 shadow"%>
      <%= content_tag :h5, "#{@authority.position}", class:"col-md-12"%>
      </div>
      <div class="col-md-12 text-justify">
        <%= simple_format("#{@authority.about}")%>
      </div>
    </div>
    </section>

    <hr id="phts">
    <div class="carousel_wrap">
    <h2 class="shadow text-center animated fadeInUp"></h1>
    <%= render 'layouts/carousel_photos' %>
    </div>

    <hr id="prj">
    <section>
      <h2 class="shadow text-center animated fadeInUp h2">Projects</h1>
        <div class='row'>
          <%= render @projects %>
        </div>
    </section>

    <hr id="ppr">
    <section class='indexpage row'>
    <h2 class="shadow text-center animated fadeInUp">Papers</h1>
      <div class='row'>
        <%= render @papers %>
      </div>
    </section>

    <hr id="cnts">
    <section class='contact text-center'>
    <h2 class="shadow animated fadeInUp">Contact</h1>
    <%= render @contacts %>
    </section>
